{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist", 
      "rootDir": "./src",
      "strict": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ], 
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  